# ================================================
# FocusFlow API Environment Configuration
# ================================================
# Copy this file to .env and fill in the required values
# DO NOT commit the actual .env file to version control

# ================================================
# Database Configuration
# ================================================
# Database connection URL for Prisma
# Format: postgresql://username:password@localhost:5432/database_name
# Example: postgresql://focusflow_user:secure_password@localhost:5432/focusflow_db
DATABASE_URL="postgresql://username:password@localhost:5432/database_name"

# ================================================
# JWT Authentication Configuration
# ================================================
# JWT secret for access tokens (REQUIRED - minimum 32 characters)
# Generate with: openssl rand -base64 32
JWT_SECRET="your-super-secure-jwt-secret-min-32-chars"

# JWT secret for refresh tokens (REQUIRED - minimum 32 characters)  
# Generate with: openssl rand -base64 32
JWT_REFRESH_SECRET="your-super-secure-refresh-secret-min-32-chars"

# JWT token expiration times
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# ================================================
# Server Configuration
# ================================================
# Port for the API server
PORT=3001

# Node environment (development, production, test)
NODE_ENV="development"

# ================================================
# CORS Configuration
# ================================================
# Frontend URL for CORS (REQUIRED for production)
# Development: http://localhost:3000
# Production: https://your-domain.com
CORS_ORIGIN="http://localhost:3000"

# ================================================
# Security Configuration
# ================================================
# BCrypt salt rounds (10-15, higher = more secure but slower)
BCRYPT_ROUNDS=12

# ================================================
# Rate Limiting Configuration
# ================================================
# Rate limiting window in milliseconds (default: 15 minutes)
RATE_LIMIT_WINDOW_MS=900000

# Maximum requests per window for general endpoints
RATE_LIMIT_MAX_REQUESTS=100

# Maximum requests per window for authentication endpoints
RATE_LIMIT_AUTH_MAX_REQUESTS=5

# ================================================
# Logging Configuration
# ================================================
# Log level (error, warn, info, debug)
LOG_LEVEL="info"

# ================================================
# Development Configuration
# ================================================
# Enable Swagger API documentation (true/false)
ENABLE_SWAGGER="true"

# ================================================
# Production-Only Configuration
# ================================================
# Uncomment and configure for production deployment

# SSL/TLS Configuration
# SSL_CERT_PATH="/path/to/ssl/cert.pem"
# SSL_KEY_PATH="/path/to/ssl/private.key"

# Session Configuration
# SESSION_SECRET="your-session-secret-for-express-sessions"

# Email Configuration (for password reset, notifications, etc.)
# EMAIL_PROVIDER="smtp"
# EMAIL_HOST="smtp.gmail.com"
# EMAIL_PORT=587
# EMAIL_USER="your-email@domain.com"
# EMAIL_PASS="your-app-password"
# EMAIL_FROM="FocusFlow <noreply@yourdomain.com>"

# Redis Configuration (for caching, sessions, rate limiting)
# REDIS_URL="redis://localhost:6379"

# Monitoring & Analytics
# SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
# ANALYTICS_API_KEY="your-analytics-api-key"

# Cloud Storage (for file uploads)
# AWS_ACCESS_KEY_ID="your-aws-access-key"
# AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
# AWS_REGION="us-east-1"
# AWS_S3_BUCKET="your-s3-bucket-name"

# ================================================
# Security Notes
# ================================================
# 1. Always use strong, randomly generated secrets
# 2. Never commit this file with real values to version control
# 3. Use different secrets for development and production
# 4. Rotate secrets regularly in production
# 5. Consider using a secret management service in production
# 6. Ensure DATABASE_URL uses SSL in production (?sslmode=require)

# ================================================
# Quick Setup Commands
# ================================================
# Generate JWT secrets:
# openssl rand -base64 32
# 
# Create database:
# createdb focusflow_db
# 
# Run database migrations:
# npx prisma migrate dev
# 
# Seed database (if seed script exists):
# npx prisma db seed